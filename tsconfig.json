{
    "compilerOptions": {
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "es2022",
        "moduleResolution": "node",
        "target": "es2016",
        "noUnusedLocals": true,
        "sourceMap": false,
        "outDir": "./lib",
        "declaration": true,
        "jsx": "react",
        "lib": ["es2021", "dom", "dom.iterable"],
        "strict": true, // watcha+
        "allowJs": true, // watcha+
        "checkJs": false // watcha+
    },
    "include": [
        "./node_modules/matrix-js-sdk/src/@types/*.d.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./test/**/*.ts",
        "./test/**/*.tsx"
    ]
}
